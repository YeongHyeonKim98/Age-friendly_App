<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ActivityStart">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="-95dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/test4" />

        <TextView
            android:id="@+id/button_click_text_view"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="본 애플리케이션은\n 성남고령친화종합체험관 사업인\n'고령친화산업 해커톤 공모전'의 결과물로\n 고령자의 삶의 질 향상을 위해\n 만들어진 어플리케이션 입니다."
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/button_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="#E0FFFF">

        <ImageButton
            android:id="@+id/img_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/m3button"
            android:scaleType="center"
            android:src="@drawable/house4"
            android:onClick="buttonClick20"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/imgbtn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_click_text_view" />
        <ImageButton
            android:id="@+id/img_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="50dp"
            android:scaleType="center"
            android:background="@drawable/m3button"
            android:src="@drawable/youtube4"
            android:onClick="buttonClick21"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgbtn1"
            app:layout_constraintTop_toBottomOf="@+id/button_click_text_view" />


</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E0FFFF">

            <TextView
                android:id="@+id/textView102"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="체험관 홈페이지\n 바로가기"
                android:textStyle="bold"
                android:textColor="#070707"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView101"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="47dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="체험관 유투브\n 바로가기"
                android:textColor="#070707"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
        <Button
            android:id="@+id/button_st"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="25dp"
            android:background="@drawable/m2button"
            android:onClick="buttonClick12"
            android:text="어플리케이션 시작하기"
            android:textColor="	#FFFFFF"
            android:textSize="19sp" />
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>